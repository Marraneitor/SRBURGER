        message += `\n*üßæ Detalle del pedido:*\n`;
        
        cart.forEach(item => {
            message += `\n‚Ä¢ ${item.quantity}x ${ item.baseItem.name} - $${(item.price * item.quantity).toFixed(2)}\n`;
            
            if (item.isCombo) {
                // Detalles de hamburguesas en combo
