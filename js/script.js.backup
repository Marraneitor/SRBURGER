    function normalizeCategoriesList(list) {
        const arr = Array.isArray(list) ? list : [];
        const seen = new Set();
        const out = [];
        arr.forEach((raw) => {
            const name = String(raw || '').trim();
            if (!name) return;
            const key = name.toLowerCase();
            if (seen.has(key)) return;
            seen.add(key);
            out.push(name);
        });
        return out;
    }

